    <form action="/articles/<%=@article.id%>" method="post">
        <input id="hidden" type="hidden" name="_method" value="patch">
        <p><label for="article_title">Article Title:</label>
        <input id="article_title" type="text" name="article[title]" value="@article.title"></p>
   
        <p><label for="article_content">Please write your article here:</label>
        <input id="article_content" type="text" name="article[content]" value="@article.content"></p>
       
        <input type="submit" value="submit">
    </form>